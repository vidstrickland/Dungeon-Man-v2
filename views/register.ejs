<% include ./partials/header %>
<div class="container">
    <form class="form-signin login" action="/register" method="POST">
        <h2 class="form-signin-heading">Register Your Account</h2>
        <div class="form-group">
            <label for="inputEmail" class="sr-only">Username</label>
            <input type="text" name="username" class="form-control input-lg" placeholder="Username" required autofocus>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" name="password" class="form-control input-lg" placeholder="Password" required>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
    </form>
    </div>
<% include ./partials/footer %>